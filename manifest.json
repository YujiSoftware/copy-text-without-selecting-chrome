{
  "name": "Copy Text without Selecting",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Copy text without selecting. Easy and fast copy tool.",
  "default_locale": "en",
  
  "permissions" : [
    "http://*/*", 
    "https://*/*", 
    "contextMenus",
    "clipboardRead"
  ],
  
  "icons" : {
    "48" : "icon.png"
  },
  
  "background" : {
    "scripts" : ["background.js"]
  },
  "content_scripts": [
        {
            "matches": [
                "http://*/*", 
                "https://*/*"
            ],
            "js": [
                "jquery-2.2.0.min.js",
                "menu.js",
                "content.js"
            ],
            "run_at" : "document_start"
        }
    ]
}
