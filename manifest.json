{
  "name": "Copy text with Alt-Click",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "Copy text with Alt-Click. Easy and fast copy tool.",
  "default_locale": "en",
  
  "permissions" : [
    "http://*/*", 
    "https://*/*", 
    "clipboardWrite"
  ],
  
  "icons" : {
    "48" : "icon.png"
  },
  
  "content_scripts": [
        {
            "matches": [
                "http://*/*", 
                "https://*/*"
            ],
            "js": [
                "jquery-2.2.0.min.js",
                "menu.js",
                "content.js"
            ],
            "run_at" : "document_start"
        }
    ]
}
